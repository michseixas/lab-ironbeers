<div class="random-beers">
    <div class="div-container">
        {{#each beers}}
        <div class="div-images"><img src="{{this.image_url}}" alt="a random beer" class="beer-photo"></div>
        <div class="div-description">
            <h2>
                {{this.name}}
                {{!-- aqui this es cada elemento. Para cada elemento, pillame el name --}}
            </h2>
            <h3>
                {{this.tagline}}
            </h3>
            <p>
                {{this.description}}
            </p>
            <h3>Food Pairing</h3>
            <ul>
                {{#each this.food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>
                {{brewers_tips}}
            <p>
        </div>
        {{/each}}
    </div>
</div>